
import java.io.IOException;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Scanner;

public class dataRetrieval {

	public static void main(String[] args) throws IOException, ParseException {
		portfolio myPF = new portfolio();
		Scanner in = new Scanner(System.in);
		String stockSym = null;

		System.out.println(
				"Enter stock symbols for stocks in portfolio. Type 'END' when all stocks in your portfolio are added");

		for (int n = 0; n < 2; n++) {
			stockSym = in.nextLine();
			security nextSec = new security(stockSym);
			myPF.addToPF(nextSec);
		}
		// System.out.println(myPF.getPF().get(0).getSymbol());
		in.close();

		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");

		String test = "2016-10-07";
		Calendar testg = Calendar.getInstance();
		testg.setTime(sdf.parse(test));

		for (security security1 : myPF.getPF()) {
			if (myPF.getPF().get(1).getSymbol().equals("MSFT")) {
				System.out.println(myPF.getPF().get(1).getClosePriceForDate(testg));
			}
		}
		//System.out.println(myPF.getPF().get(0).getClosePriceForDate(testg));

	}

}
